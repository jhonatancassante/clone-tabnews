{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Implementação do https://www.tabnews.com.br para o https://curso.dev",
  "main": "index.js",
  "scripts": {
    "dev": "node infra/scripts/dev.js",
    "dev:raw": "npm run services:up && npm run services:wait:database && npm run migrations:up && next dev",
    "test": "npm run services:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "posttest": "npm run services:stop",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wait-for-postgres.js",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "build": "next build",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "eslint --max-warnings=0 . --ignore-pattern package.json --ignore-pattern package-lock.json",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "",
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,md}": [
      "npm run lint:prettier:fix",
      "eslint --max-warnings=0"
    ],
    "!(package|package-lock).json": [
      "npm run lint:prettier:fix"
    ]
  },
  "dependencies": {
    "async-retry": "1.3.3",
    "bcryptjs": "3.0.2",
    "cookie": "1.0.2",
    "dotenv": "16.4.5",
    "dotenv-expand": "11.0.6",
    "next": "^14.2.33",
    "next-connect": "1.0.0",
    "node-pg-migrate": "7.6.1",
    "nodemailer": "7.0.5",
    "pg": "8.12.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "swr": "2.2.5",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.4.0",
    "@commitlint/config-conventional": "19.2.2",
    "@faker-js/faker": "9.7.0",
    "commitizen": "4.3.1",
    "concurrently": "8.2.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.8.0",
    "eslint-plugin-jsonc": "2.21.0",
    "eslint-plugin-no-secrets": "2.2.1",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "3.3.3",
    "set-cookie-parser": "2.7.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
